.container
    .row
        .page-header
            h1 #{title}
            small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .container-header
            a.navbar-brand(href="/") 重度科幻迷
        p.navbar-text.navbar-right
            a.navbar-link(href="#", data-toggle="modal", data-target="#signupModal") 注册
            span &nbsp;|&nbsp;
            a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录
#signupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/user/signup")
                .modal-header 注册
                .modla-body
                    .form-group
                        label(for="signName") 用户名
                        input#signName.form-control(name="user[name]", type="text")
                    .form-group
                        label(for="signPassword") 密码
                        input#signName.form-control(name="user[password]", type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 注册
#signinModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="POST", action="/user/signin")
                .modal-header 登录
                .modla-body
                    .form-group
                        label(for="signName") 用户名
                        input#signName.form-control(name="user[name]", type="text")
                    .form-group
                        label(for="signPassword") 密码
                        input#signName.form-control(name="user[password]", type="text")
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 登录
