extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead 
                    tr
                        th 电影名字
                        th 导演
                tbody
                    each item in movies
                        tr(class="item-id-#{item.id}")
                            td #{item.title}
                            td #{item.director}
                            td: a(target="_blank", href="../detail/#{item.id}") 查看
                            td: a(target="_blank", href="../admin/update/#{item.id}") 修改
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item.id}") 删除
                            