extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 姓名
                        th 密码
                        th 创建时间
                        th 删除
                tbody
                    each item in users 
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{item.password}
                            td #{moment(item.meta.createdAt).format('MM/DD/YYYY')}
                            td
                                button.btn.btn-danger.del(type="button", data-id="#{item._id}") 删除
    script(src="/js/user.js")