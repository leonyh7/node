extends ../layout

block content
    .container
        .row
           form.form-horizen(method="post", action="/admin/new")
                .form-group
                    label.col-sm-3.control-label(for="inputTitle") 电影名字
                    .col-sm-10
                        input#inputTitle.form-control(type="text", name=movie[title])
                .form-group
                    label.col-sm-3.control-label(for="director") 导演
                    .col-sm-10
                        input#director.form-control(type="text", name=movie[director])